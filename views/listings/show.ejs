<%- layout("/layouts/boilerplate") %>

<div class="row mt-3">

    <div class="col-8 offset-3">
        <h3>Showing listing </h3>
    </div>

    <div class="col-6 offset-3 show-card">
        <div class="card">
            <!-- <img src="<%= listing.image %>" class="card-img-top show-image" alt="listing_image"> -->
            <img src="https://images.unsplash.com/photo-1552733407-5d5c46c3bb3b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTB8fHRyYXZlbHxlbnwwfHwwfHx8MA%3D%3D&auto=format&fit=crop&w=800&q=60" 
                class="card-img-top show-image" alt="listing_image">
            <div class="card-body">
                <p class="card-text">
                    <b> <%= listing.title %> </b> <br/>
                    <%= listing.description %> <br/>
                    &#x20B9; <%= listing.price %></li> <br/>
                    <%= listing.location %> <br/>
                    <%= listing.country %> <br/>
                </p>
            </div>
        </div>
    </div>

    <div class="btns">
        <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark edit-btn col-1 offset-3"> Edit </a>
        
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
            <button class="btn btn-dark offset-5"> Delete </button>
        </form>
    </div>

</div>